{
  "name": "Reloj Minimalista",
  "short_name": "Reloj",
  "description": "Reloj digital minimalista con alarma personalizable y múltiples opciones de visualización",
  "version": "1.0.0",
  "manifest_version": 2,
  "start_url": "./index.html",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#000000",
  "background_color": "#000000",
  "scope": "./",
  "lang": "es",
  "dir": "ltr",
  "categories": ["utilities", "lifestyle", "productivity"],
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Configurar Alarma",
      "short_name": "Alarma",
      "description": "Acceso rápido para configurar una alarma",
      "url": "./index.html?action=alarm",
      "icons": [
        {
          "src": "icons/shortcut-alarm.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Modo Pantalla Completa",
      "short_name": "Completa",
      "description": "Abrir reloj en pantalla completa",
      "url": "./index.html?mode=fullscreen",
      "icons": [
        {
          "src": "icons/shortcut-fullscreen.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-main.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Vista principal del reloj en escritorio"
    },
    {
      "src": "screenshots/mobile-portrait.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Reloj en dispositivo móvil"
    }
  ],
  "features": [
    "cross-platform",
    "offline",
    "customizable"
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [],
  "file_handlers": [],
  "share_target": {
    "action": "./",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications"
  ],
  "edge_side_panel": {
    "preferred_width": 320
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}